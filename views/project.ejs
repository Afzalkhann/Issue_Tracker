<link rel="stylesheet" href="/css/project.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<div id="header">
    <h1>Project Deatils</h1>
    <a href="/">Home</a>
</div>
<div id="main">
<div id="details-container">
    
    <%if(project){%>
        <h2><%=project.name%></h2>
        <p>Description: <%=project.description%></p>
        <p>Author: <%=project.author%></p>
    <%}%>
</div>
<div id="form-container">
    <form action="/issue/create/?project=<%=project._id%>" method="post" class=" row">
        <h4> Add issue for project <strong><%=project.name%></strong></h4>
        <label> Title</label>
        <input type="text" name="title">
        <label for="">Description</label>
        <input type="text" name="description">
        <label for="">Raised By</label>
        <input type="text" name="raisedBy">
        <input type="submit">
    </form>
</div>
</div>
<div id="table">
    <table class="table">
        <tr>
            <th>Title</th><th>Description</th><th>Author</th><th>Status</th>
        </tr>
        <%for(issue of project.issues){%>
            <tr>
                <td><%=issue.title%></td><td><%=issue.description%></td><td><%=issue.raiseBy%></td>
                <%if(issue.status=='Pending'){%>
                    <td><%=issue.status%> <a href="#">done</a></td>
                <%}else{%>
                    <td><%=issue.status%></td>
                <%}%>
            </tr>
        <%}%>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
